<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.dango.day2ejcolores.Calculator">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="100">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/resultView"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:singleLine="true"
                android:text="0" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PI"
                android:id="@+id/pitton"
                android:layout_gravity="right|top"
                android:onClick="addNumber" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANS"
                android:id="@+id/b_ans"
                android:layout_gravity="right|bottom"
                android:onClick="addNumber" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:id="@+id/key7"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:id="@+id/key8"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:id="@+id/key9"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:id="@+id/keyPlus"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:background="#286CCF"
                        android:textColor="#212121"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_margin="5dp"
                        android:onClick="addOperator" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:id="@+id/key4"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:id="@+id/key5"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:id="@+id/key6"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:id="@+id/keyMinus"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:background="#286CCF"
                        android:textColor="#212121"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_margin="5dp"
                        android:onClick="addOperator" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:id="@+id/key1"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:id="@+id/key2"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:id="@+id/key3"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="X"
                        android:id="@+id/keyTimes"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:background="#328FC6"
                        android:textColor="#212121"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_margin="5dp"
                        android:onClick="addOperator" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="C"
                        android:id="@+id/keyClear"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:textSize="30dp"
                        android:onClick="addOperator" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/key0"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="#000000"
                        android:textSize="26dp"
                        android:singleLine="false"
                        android:layout_margin="5dp"
                        android:onClick="addNumber" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="="
                        android:id="@+id/keyEqual"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:textSize="30dp"
                        android:onClick="addOperator" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="/"
                        android:id="@+id/keyDiv"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:background="#286CCF"
                        android:textColor="#212121"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_margin="5dp"
                        android:onClick="addOperator" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
